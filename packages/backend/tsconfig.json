{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "types/client-schema": ["types/graphql-client-schema.ts"],
      "types/server-schema": ["types/graphql-server-schema.ts"],
      "types/app": ["types/types.ts"],
      "tests/*": ["__tests__/*"],
      "lib/*": ["lib/*"]
    }
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules"],
  "include": ["**/*.ts", "**/*.graphql"]
}
